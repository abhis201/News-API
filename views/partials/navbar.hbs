<script>
  function setHref(button) {
    var validCountries = ['in', 'us'];
    var userCountry = prompt('Enter your country (in or us):');

    if (userCountry && validCountries.includes(userCountry.toLowerCase())) {
      var category = button.getAttribute('name');
      window.location.href = '/' + category + '?country=' + encodeURIComponent(userCountry.toLowerCase());
    } else {
      alert('Invalid country code. Please enter "in" or "us".');
    }
  }
</script>

